<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/item_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/item_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/item_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Price -->
        <TextView
            android:id="@+id/item_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/item_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Country -->
        <TextView
            android:id="@+id/item_detail_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Postal Code -->
        <TextView
            android:id="@+id/item_detail_postal_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postal Code"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Seller -->
        <TextView
            android:id="@+id/item_detail_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Message Seller Button -->
        <Button
            android:id="@+id/message_seller_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message Seller"
            android:textColor="#FFFFFF"
            android:background="#0083FC"
            android:layout_marginBottom="8dp" />

        <!-- Mark as Sold Button -->
        <Button
            android:id="@+id/mark_as_sold_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Sold"
            android:textColor="#FFFFFF"
            android:background="#FF0000" />

    </LinearLayout>
</ScrollView>
