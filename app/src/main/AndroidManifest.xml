<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.The6ixMarket"
        tools:targetApi="31">

        <!-- MainActivity with launcher intent -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login and Register Activities -->
        <activity
            android:name=".Login"
            android:exported="false" />
        <activity
            android:name=".Register"
            android:exported="false" />

        <!-- Item Detail Page -->
        <activity
            android:name=".ItemDetailActivity"
            android:exported="false" />

        <!-- Profile Page -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Create Listings Page -->
        <activity
            android:name=".CreateListingActivity"
            android:exported="false" />



        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />

        <!-- Messages Page -->
        <activity
            android:name=".MessagesActivity"
            android:exported="false" />

        <!-- Active Listings Page -->
        <activity
            android:name=".ActiveListingsActivity"
            android:exported="false" />

        <!-- Sold Listings Page -->
        <activity
            android:name=".SoldListingsActivity"
            android:exported="false" />

        <!-- Profile Details Page -->
        <activity
            android:name=".ProfileDetailsActivity"
            android:exported="false" />

    </application>

</manifest>
