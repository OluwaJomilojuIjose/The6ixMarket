<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Management"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/buttonManageListings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage My Listings"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonSaveListings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved Listings"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/buttonPurchasedListings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchased Listings"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>